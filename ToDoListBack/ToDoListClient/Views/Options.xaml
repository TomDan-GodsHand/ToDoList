<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ToDoListClient"
             x:Class="ToDoListClient.Views.Options"
             Shell.NavBarIsVisible="True"
             Shell.FlyoutBehavior="Disabled"
             Title="设置">

    <StackLayout
        HorizontalOptions="Fill">
        <BoxView
        Color="{AppThemeBinding Dark={StaticResource DarkBordar}, Light={StaticResource Bordar}}"

            HeightRequest="1" />
        <StackLayout
            HorizontalOptions="Center">
            <HorizontalStackLayout>
                <Frame
                    BorderColor="{StaticResource Bordar}"
                    CornerRadius="50"
                    HeightRequest="60"
                    WidthRequest="60"
                    Margin="10" IsClippedToBounds="True"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                </Frame>
            </HorizontalStackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>